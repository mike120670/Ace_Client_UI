
@{
    ViewBag.Title = "PayBalanceDue";
}

<script src="/Scripts/moment.js"></script>

<div class="col-md-9 col-sm-12">
    <div class="container margin-top-lg" ng-controller="PayBalanceDueController">
        <h3>Pay Balance Due</h3>

        <div class="row">
            <div class="col-sm-4" style="vertical-align: top">
                <div class="col-md-12 col-sm-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">Parking Information</div>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-sm-8 no-right-padding">Customer:</div>
                                    <div class="col-sm-4">{{selected.AccountNumber}}</div>
                                </div>
                            </li>                            
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-sm-8 no-right-padding">Account #:</div>
                                    <div class="col-sm-4">{{selected.AccountNumber}}</div>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-sm-12">Parking Location:</div>
                                    <div class="col-sm-12">
                                        <select class="select-full-width list-group-select"
                                                ng-model="selected"
                                                ng-change="loadLotData(selected.LotNumber)"
                                                ng-options="result as result.Description for result in customerLots track by result.LotNumber"></select>
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-sm-8 no-right-padding">Invoice Due:</div>
                                    <div class="col-sm-4 right">{{selected.Balance | currency}}</div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>                
            </div>
            <div class="col-sm-8">
                <form class="form-horizontal">

                    <!-- Multiple Radios (inline) -->
                    <!--
                    <div class="form-group">
                        <div class="col-md-12"> 
                            <label class="radio-inline">
                                <input type="radio" name="radios" ng-model="choice" value="cc" checked="checked">
                                Pay By Credit Card
                            </label> 
                            <label class="radio-inline">
                                <input type="radio" name="radios" ng-model="choice" value="ch">
                                Pay By Check
                            </label> 
                        </div>
                    </div>
                    //-->

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="ccname">Credit Card Name</label>
                        <div class="col-md-4">
                            <input id="ccname" name="creditCardName" type="text" placeholder="placeholder" class="form-control input-md" required="">

                        </div>
                    </div>                    

                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="ccType">Credit Card Type</label>
                        <div class="col-md-4">
                            <select id="ccType" name="selectbasic" class="form-control">
                                <option value="1">Option one</option>
                                <option value="2">Option two</option>
                            </select>
                        </div>
                    </div>
                    
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="ccNumber">Credit Card Number</label>
                        <div class="col-md-4">
                            <input id="ccNumber" name="creditCardNumber" type="text" placeholder="placeholder" class="form-control input-md" required="">

                        </div>
                    </div>    

                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="ccExpMonth">Expiration Month</label>
                        <div class="col-md-4">
                            <select id="ccExpMonth" name="selectbasic" class="form-control">
                                <option value="1">Option one</option>
                                <option value="2">Option two</option>
                            </select>
                        </div>
                    </div>
                    
                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="ccExpYear">Expiration Year</label>
                        <div class="col-md-4">
                            <select id="ccExpYear" name="selectbasic" class="form-control">
                                <option value="1">Option one</option>
                                <option value="2">Option two</option>
                            </select>
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="ccCVV">CVV</label>
                        <div class="col-md-4">
                            <input id="ccCVV" name="textinput" type="text" placeholder="placeholder" class="form-control input-md" required="">
                        </div>
                    </div>
                    
                    <!-- Text input-->
                    <!-- Not needed yet.  We'll do this after deployment
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="accountNumber">Account #</label>
                        <div class="col-md-4">
                            <input id="accountNumber" name="textinput" type="text" placeholder="placeholder" class="form-control input-md" required="">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="routingNumber">Routing #</label>
                        <div class="col-md-4">
                            <input id="routingNumber" name="textinput" type="text" placeholder="placeholder" class="form-control input-md" required="">
                        </div>
                    </div>
                    //-->
                    
                    <!-- Multiple Checkboxes -->
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="checkbox">
                                <label for="checkboxes-0">
                                    <input type="checkbox" name="checkboxes" id="checkboxes-0" value="1">
                                    Enable automatic monthly payments
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Button -->
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="col-md-4 offset-md-4">
                                <button id="singlebutton" name="singlebutton" class="btn btn-primary">Process</button>
                            </div>                            
                        </div>
                    </div>
                </form>
            </div>            
        </div>
    </div>
</div>

